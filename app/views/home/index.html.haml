
#main_content
  #banner
    #banner_text
      %span What to eat?
            
#search_bar
  #search_form
    %input#search_keyword{:type=>"search", :placeholder=>" 你喜欢好吃什么 "}
    %input#submit_search{:type=>"submit", :value=>"Search"}

:javascript
  $("input#submit_search").click(function(){ 
    var key = $("input#search_keyword").val();
    if( key != ''){
    
    var url = "/search_result?search_text="+$("input#search_keyword").val();
    window.open(url,"_self");   
    }

  });
:css
  #search_bar {
      background-position: 0px 0px;
      height: 90px;
      left: 1px;
      min-height: 90px;
      min-width: 980px;
      position: absolute;
      top: 60%;
      width: 980px;
      align-self: stretch;
      perspective-origin: 490px 45px;
      transform-origin: 490px 45px;
      background: rgba(0, 0, 0, 0) none repeat scroll 0px 0px / auto padding-box border-box;
      font: normal normal normal normal 10px/normal Arial, Helvetica, sans-serif;
  }

  #main_content {
      background-position: 0px 0px;
      bottom: 0px;
      height: 60%;
      left: 0px;
      position: absolute;
      right: 0px;
      top: 0px;
      width: 980px;
      align-self: stretch;
      perspective-origin: 490px 252px;
      transform-origin: 490px 252px;
      background: rgba(0, 0, 0, 0) none repeat scroll 0px 0px / auto padding-box border-box;
      font: normal normal normal normal 10px/normal Arial, Helvetica, sans-serif;
  }
  #banner {
      left: 119px;
      position: absolute;
      top: 70%;
  }
  /*#DIV_1*/
  #banner_text {
      color: rgb(255, 255, 255);
      text-align: center;
      width: 800px;
      word-wrap: break-word;
      /*font: italic normal normal normal 100px/normal monospace, serif;*/
      font: 200 6.4em/0 "Bebas Neue","League Gothic",Haettenschweiler,"Arial Narrow",sans-serif;
      margin: 0px;
  }

  #search_form {
      color: rgb(255, 255, 255);
      height: 70px;
      width: 750px;
      perspective-origin: 495px 35px;
      transform-origin: 495px 35px;
      border: 0px none rgb(255, 255, 255);
      font: normal normal normal normal 15px/24px ProximaNovaLight, 'Helvetica Neue', Helvetica, Arial, sans-serif;     
      margin: auto;
      outline: rgb(255, 255, 255) none 0px;
  }

  #search_form:after {
      clear: both;
      color: rgb(255, 255, 255);
      display: table;
      width: 1px;
      perspective-origin: 0.5px 0px;
      transform-origin: 0.5px 0px;
      content:' ';
      border: 0px none rgb(255, 255, 255);
      /*font: normal normal normal normal 15px/24px ProximaNovaLight, 'Helvetica Neue', Helvetica, Arial, sans-serif;*/
      font: 200 2.4em/0 "Bebas Neue","League Gothic",Haettenschweiler,"Arial Narrow",sans-serif;
      margin: 0px;
      outline: rgb(255, 255, 255) none 0px;
  }

  #search_form:before {
      color: rgb(255, 255, 255);
      display: table;
      width: 1px;
      perspective-origin: 0.5px 0px;
      transform-origin: 0.5px 0px;
      content:' ';
      border: 0px none rgb(255, 255, 255);
      /*font: normal normal normal normal 15px/24px ProximaNovaLight, 'Helvetica Neue', Helvetica, Arial, sans-serif;*/
      font: 200 .4em/0 "Bebas Neue","League Gothic",Haettenschweiler,"Arial Narrow",sans-serif;
      margin: 0px;
      outline: rgb(255, 255, 255) none 0px;
  }

  #search_keyword {
      background-position: 14px 13px;
      box-shadow: rgba(255, 255, 255, 0.2) 0px 0px 5px 2px inset;
      color: rgb(87, 87, 87);
      display: block;
      height: 50px;
      width: 750px;
      perspective-origin: 495px 25px;
      transform-origin: 495px 25px;
      background: rgb(255, 255, 255) url(data:image/svg+xml;base64,) no-repeat scroll 14px 13px / auto padding-box border-box;
      border: 1px solid rgb(255, 255, 255);
      border-radius: 2px 2px 2px 2px;
      /*font: normal normal normal normal 18px/24px ProximaNovaLight, 'Helvetica Neue', Helvetica, Arial, sans-serif;*/
      margin: 20px 0px 0px;
      outline: rgb(87, 87, 87) none 0px;
      padding: 0px 145px 0px 45px;
  }

  #submit_search {
      color: rgb(255, 255, 255);
      cursor: pointer;
      display: block;
      float: right;
      height: 50px;
      text-align: center;
      text-shadow: rgb(49, 136, 188) 0px 1px 0px;
      white-space: pre;
      width: 136px;
      align-items: flex-start;
      perspective-origin: 68px 25px;
      transform-origin: 68px 25px;
      background: rgb(71, 156, 207) none repeat scroll 0% 0% / auto padding-box border-box;
      border: 1px solid rgb(55, 147, 203);
      border-radius: 0 2px 2px 0;
      /*font: normal normal normal normal 18px/24px ProximaNovaLight, 'Helvetica Neue', Helvetica, Arial, sans-serif;*/
      font: 200 2.0em/0 "Bebas Neue","League Gothic",Haettenschweiler,"Arial Narrow",sans-serif;
      margin: -50px -1px 0px 0px;
      outline: rgb(255, 255, 255) none 0px;
      padding: 11px 40px;
  }
