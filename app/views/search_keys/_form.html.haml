= form_for @search_key do |f|
  - if @search_key.errors.any?
    #error_explanation
      %h2= "#{pluralize(@search_key.errors.count, "error")} prohibited this search_key from being saved:"
      %ul
        - @search_key.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sqls
    = f.text_area :sqls
  .field
    = f.label :params
    = f.text_field :params
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
