= form_for @food do |f|
  - if @food.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food.errors.count, "error")} prohibited this food from being saved:"
      %ul
        - @food.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :recommend_time
    = f.number_field :recommend_time
  .field
    = f.label :food_url
    = f.text_field :food_url
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :restaurant_id
    = f.number_field :restaurant_id
  .actions
    = f.submit 'Save'
